slmenu-test() {
selected="$(cat ~/.snippetrc | sed '/^$/d' | sort -n | slmenu -e -i )"

result=$(echo "$selected" | sed -e s/\;\;\.\*\$// | sed 's/^[ \t]*//;s/[ \t]*$//' | slmenu )
cmd=$(echo "$result" | cut -d' ' -f2-)
[ -n "$cmd" ] && eval setsid setsid "$cmd"
}
